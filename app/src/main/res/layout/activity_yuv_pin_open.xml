<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".LoginApp.YuvPinOpen"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="100dp"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/yuvti"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter YUV Pin"
            android:textSize="25dp"
            android:layout_marginBottom="30dp"/>


        <EditText
            android:id="@+id/field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:gravity="center"
            android:textSize="30sp"
            android:maxLength="4"
            android:textColor="@color/textColor"
            tools:targetApi="o"
            android:inputType="numberPassword"
          />

        <com.konaire.numerickeyboard.NumericKeyboard
            android:id="@+id/keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:field="@+id/field"
            app:fieldMaxLength="10"
            app:keyTextColor="@color/textColor" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO"
            android:layout_marginTop="40dp"
            android:backgroundTint="#2E2737"
            android:id="@+id/gobtn"
            />


   </LinearLayout>

</ScrollView>